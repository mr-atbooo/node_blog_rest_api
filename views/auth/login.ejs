<!doctype html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta http-equiv="x-ua-compatible" content="ie=edge">
	<title>مدونتى</title>
	<meta name="description" content="Neat">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<!-- Google Font -->
	<link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet">

	<!-- Favicon -->
	<link rel="shortcut icon" href="../images/favicon.png">

	<!-- Stylesheet -->
	<link rel="stylesheet" href="css/neat.min.css">
	<style>
        .invalid{
            border: 1px solid #f00;
        }
        .text-error
        {
            color: #f00; text-align: center;display: block;
        }
    </style>
</head>

<body>

	<div class="o-page">

		<main class="">
			<div class="container">
				<div class="row justify-content-center">
					<div class="col-md-6">

						<div class="c-alert c-alert--info u-mb-medium">

							<h2 style="text-align: center;margin-bottom: 14px;">تسجيل دخول</h3>
							<div class="c-alert__content">
								
								<% for (let error of validationErrors) { %>
									<span class="text-error"><%= error.msg%></span>
								<%}%>	
								<br>
								<form action="/login" method="POST">
									<div class="c-field">
										<label class="email">البريد الالكترونى </label>
										<input type="email" name="email" value="<% if (hasError) { %><%= emailValue %><% } %>"
										class="c-input u-mb-small <%= validationErrors.find(e => e.path == 'email') ? 'invalid' : '' %>" 
										placeholder="البريد الالكترونى" id="email">
									</div>
									<div class="c-field">
										<label class="password"> كلمة المرور </label>
										<input type="password" name="password"  placeholder="كلمة المرور " id="password"
										class="c-input u-mb-small <%= validationErrors.find(e => e.path == 'password') ? 'invalid' : '' %>">
									</div>
									<input type="hidden" name="_csrf" value="<%= csrfToken %>">
									<button class="c-btn c-btn--fullwidth c-btn--info">حفظ </button>
								</form>

							</div>
						</div><!-- // .c-alert -->

					</div>
				</div>
			</div>
		</main>
	</div>

	<!-- Main JavaScript -->
	<script src="js/neat.js"></script>
</body>

</html>